import random
choicesComputer = ['камень','ножницы','бумага']
print("Камень давит ножницы.Ножницы режут бумагу.Бумага накрывает камень")
playerChoice = input("Выберите: камень,ножницы,бумага или (выйти)?")


while playerChoice != "выйти":

    playerChoice = playerChoice.lower()
    computerChoices = random.choice(choicesComputer)
    print("Твой выбор "+playerChoice+" компьютер выбрал "+computerChoices+".")

    if playerChoice == computerChoices:
        print("Ничья!!!")
    elif playerChoice == "камень":
        if computerChoices == "ножницы":
            
            print("Вы победили =)")
        else:
            
            print("Искусственный интелект тебя победил!")
    elif playerChoice == "бумага":
        if computerChoices == "камень":
            
            print("Вы победили =)")
        else:
            
            print("Искусственный интелект тебя победил!")
    elif playerChoice == "ножницы":
        if computerChoices == "бумага":
            
            print("Вы победили =)")
        else:
            
            print("Искусственный интелект тебя победил!")
    else:
        print("Ошибка 404...простите =/")
    print()
    
   
    playerChoice = input("Выберите: камень,ножницы,бумага или (выйти)?")
