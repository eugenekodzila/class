using System;
using System.Windows.Forms;
using System.Drawing;

class PictureFlipper: Form
{
    Button buttonOne;
    Bitmap imageOne;
    PictureBox pictureBoxOne;

    public PictureFlipper()
    {
        this.Text = "Поворот рисунка";
        this.Size = new Size(302,240);

        buttonOne = new Button();
        buttonOne.Text = "Поворот рисунка";
        buttonOne.Location = new Point(100,150);
        buttonOne.Size = new Size(70,40); 
        buttonOne.Click += new System.EventHandler(buttonOneCLick);
        this.Controls.Add(buttonOne);

        pictureBoxOne = new PictureBox();
        pictureBoxOne.SizeMode = PictureBoxSizeMode.StretchImage;
        pictureBoxOne.BorderStyle = BorderStyle.Fixed3D;
        pictureBoxOne.ClientSize = new Size(300,196);

        imageOne = new Bitmap("../../images/Giraf.jpg");
        pictureBoxOne.Image = (Image)imageOne;

        this.Controls.Add(pictureBoxOne);   

    }
     static void Main()
        {
            Application.Run(new PictureFlipper());
        }

        void buttonOneCLick(object sender, EventArgs e)
        {
            imageOne.RotateFlip(RotateFlipType.RotateNoneFlipX);
            pictureBoxOne.Image = (Image)imageOne;
            this.Text = "Рисунок после поворота!!!!";
        }
}
