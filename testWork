using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class PlayerControllers : MonoBehaviour
{
    public float speed = 6.0f;
    public float jumpValue = 8.0f;
    public float gravity = 20.0f;
    private Vector3 moveDirection = Vector3.zero;

    void Update()
    {
        // Получаем компонент CharacterController, который прикреплён
        // к текущему GameObject
        CharacterController controller = GetComponent<CharacterController>();
        if (controller.isGrounded)//Проверяем стоит ли обьект на земле
        {
            moveDirection = new Vector3(Input.GetAxis("Horizontal"), 0, Input.GetAxis("Vertical"));
            //Debug.log("Input.GetAxis = " + MoveDirection);
            ///Преобразование координат текущего обьекта из локальных в  world space
            moveDirection = transform.TransformDirection(moveDirection);
            moveDirection *= speed;
            if (Input.GetButton("Jump"))
                moveDirection.y = jumpValue;
        }
        moveDirection.y -= gravity * Time.deltaTime;
        controller.Move(moveDirection * Time.deltaTime);
    }
}
