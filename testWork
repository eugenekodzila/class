# def <имя функции> ():
#       Блок инструкций
import random


def initGame():
    secret = "Я задумал число от 1 до 1000"
    print(secret)
    attempt = 0
    inputAnswer = 0

def playGame():
    randomNumber = random.randint(1,1000)
    while inputAnswer != randomNumber:
        print("Угадай число: ", end = "")
        inputAnswer = int(input())
        attempt + 1
        if inputAnswer < randomNumber:
            print("Слишком маленькое")
        if inputAnswer > randomNumber:
            print("Слишком большое")
        if inputAnswer == randomNumber:
            print("Правильно")

def endGame():
    print("Ты попробовал " + str(attempt) + " раз. ")

initGame()
playGame()
endGame()

