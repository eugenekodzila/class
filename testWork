frameOne = Frame()
frameOne.pack()
entry = Entry(frameOne, width=20)
entry.pack(side=LEFT)
Button(frameOne, text='Open').pack(side=LEFT)
Button(frameOne, text='Save').pack(side=LEFT)

frameTwo = Frame()
frameTwo.pack()
text = Text(frameTwo, width=50, height=20, wrap=NONE)
text.pack(side=LEFT)
scrollVertical = Scrollbar(frameTwo,command=text.yview)
scrollVertical.pack(side=LEFT,fill=Y)
text.config(yscrollcommand=scrollVertical.set)

scrollHorizontal = Scrollbar(frameTwo,command=text.xview)
scrollHorizontal.pack(side=BOTTOM,fill=X)
text.config(xscrollcommand=scrollHorizontal.set)
root.mainloop()

